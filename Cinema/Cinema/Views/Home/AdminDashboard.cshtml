@{
    ViewData["Title"] = "Dashboard Administrativo";
    var chartLabels = System.Text.Json.JsonSerializer.Serialize(ViewBag.ChartLabels);
    var chartData = System.Text.Json.JsonSerializer.Serialize(ViewBag.ChartData);
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-4 fw-bold">
                <i class="fas fa-chart-line text-warning me-3"></i>Dashboard
            </h1>
            <p class="text-muted lead">Visão geral do desempenho do cinema.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="fas fa-home me-2"></i>Voltar
        </a>
    </div>

    <!-- Cards de Métricas -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card bg-dark text-white border-0 shadow-lg h-100">
                <div class="card-body p-4 text-center">
                    <i class="fas fa-film fa-3x text-primary mb-3"></i>
                    <h5 class="card-title text-muted">Total de Filmes</h5>
                    <h2 class="display-6 fw-bold">@ViewBag.TotalMovies</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark text-white border-0 shadow-lg h-100">
                <div class="card-body p-4 text-center">
                    <i class="fas fa-video fa-3x text-info mb-3"></i>
                    <h5 class="card-title text-muted">Sessões Ativas</h5>
                    <h2 class="display-6 fw-bold">@ViewBag.TotalSessions</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark text-white border-0 shadow-lg h-100">
                <div class="card-body p-4 text-center">
                    <i class="fas fa-ticket-alt fa-3x text-warning mb-3"></i>
                    <h5 class="card-title text-muted">Ingressos Vendidos</h5>
                    <h2 class="display-6 fw-bold">@ViewBag.TicketsSold</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark text-white border-0 shadow-lg h-100">
                <div class="card-body p-4 text-center">
                    <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
                    <h5 class="card-title text-muted">Faturamento</h5>
                    <h2 class="display-6 fw-bold">@String.Format("{0:C}", ViewBag.Revenue)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card bg-dark text-white border-0 shadow-lg">
                <div class="card-header border-0">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Top 5 Filmes Mais Vendidos</h5>
                </div>
                <div class="card-body">
                    <canvas id="ticketsChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var ctx = document.getElementById('ticketsChart').getContext('2d');
            var ticketsChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(chartLabels),
                    datasets: [{
                        label: 'Ingressos Vendidos',
                        data: @Html.Raw(chartData),
                        backgroundColor: [
                            'rgba(255, 193, 7, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        borderColor: [
                            'rgba(255, 193, 7, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 99, 132, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            labels: { color: 'white' }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { color: 'rgba(255,255,255,0.7)' },
                            grid: { color: 'rgba(255,255,255,0.1)' }
                        },
                        x: {
                            ticks: { color: 'rgba(255,255,255,0.7)' },
                            grid: { display: false }
                        }
                    }
                }
            });
        });
    </script>
}
