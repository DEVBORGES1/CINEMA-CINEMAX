@model Cinema.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Resumo e Pagamento";
}

<div class="container py-5">
    <!-- Progress Bar -->
    <div class="position-relative mb-5">
        <div class="progress" style="height: 4px;">
            <div class="progress-bar bg-warning" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-warning rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">1</div>
        <div class="position-absolute top-0 start-25 translate-middle btn btn-sm btn-warning rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">2</div>
        <div class="position-absolute top-0 start-50 translate-middle btn btn-sm btn-warning rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">3</div>
        <div class="position-absolute top-0 start-75 translate-middle btn btn-sm btn-warning rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">4</div>
        <div class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-warning rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">5</div>
    </div>

    <div class="row">
        <!-- Summary Column -->
        <div class="col-lg-5 mb-4 mb-lg-0">
            <div class="card bg-dark text-white border-secondary shadow-lg h-100">
                <div class="card-header border-secondary bg-black bg-opacity-50 p-4">
                    <h3 class="h5 mb-0 fw-bold text-uppercase border-start border-4 border-warning ps-3">
                        <i class="fas fa-receipt me-2 text-white-50"></i>Resumo do Pedido
                    </h3>
                </div>
                <div class="card-body p-4">
                    <!-- Movie -->
                    <div class="d-flex gap-3 mb-4 pb-4 border-bottom border-secondary">
                        <img src="@Model.Session?.Movie?.ImageURL" alt="Poster" class="rounded" style="width: 70px; height: 100px; object-fit: cover;">
                        <div>
                            <h5 class="fw-bold text-warning mb-1">@Model.Session?.Movie?.Title</h5>
                            <p class="mb-1 small text-white-50">@Model.Session?.StartTime.ToString("dd/MM/yyyy HH:mm")</p>
                            <p class="mb-0 small text-white-50">Sala @Model.Session?.Room?.RoomNumber</p>
                        </div>
                    </div>

                    <!-- Items -->
                    <div class="mb-4">
                        <h6 class="text-uppercase text-white-50 fs-7 ls-1 border-bottom border-secondary pb-2 mb-3">Ingressos</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span>@Model.QtyNormal x Inteira</span>
                            @* <span>R$ @(...)</span> *@
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>@Model.QtyStudent x Meia</span>
                        </div>
                        <div class="d-flex justify-content-between mt-3 text-white-50 small">
                            <span>Assentos:</span>
                            <span class="text-white text-end">@string.Join(", ", Model.SelectedSeats)</span>
                        </div>
                    </div>

                    @if (Model.SelectedSnacks.Any())
                    {
                        <div class="mb-4">
                            <h6 class="text-uppercase text-white-50 fs-7 ls-1 border-bottom border-secondary pb-2 mb-3">Bombonière</h6>
                            @foreach (var snack in Model.SelectedSnacks)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <span>@snack.Quantity x @snack.Name</span>
                                    <span>R$ @((snack.Price * snack.Quantity).ToString("N2"))</span>
                                </div>
                            }
                        </div>
                    }

                    <!-- Total -->
                    <div class="mt-auto pt-4 border-top border-secondary">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 mb-0 fw-bold">Total a Pagar</span>
                            <span class="h3 mb-0 fw-bold text-warning">R$ @Model.TotalPrice.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Column -->
        <div class="col-lg-7">
            <div class="card bg-dark text-white border-secondary shadow-lg">
                <div class="card-header border-secondary bg-black bg-opacity-50 p-4">
                    <h3 class="h5 mb-0 fw-bold text-uppercase border-start border-4 border-success ps-3">
                        <i class="fas fa-credit-card me-2 text-white-50"></i>Pagamento
                    </h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Confirm" method="post">
                        <!-- Alert Info -->
                        <div class="alert alert-info border-0 d-flex align-items-center">
                            <i class="fas fa-lock me-3 fa-lg"></i>
                            <div>
                                <small class="fw-bold d-block">Ambiente Seguro</small>
                                <small>Seus dados estão protegidos.</small>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-white-50">Nome no Cartão</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-user"></i></span>
                                <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="Como impresso no cartão" required>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-white-50">Número do Cartão</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-credit-card"></i></span>
                                <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="0000 0000 0000 0000" required>
                            </div>
                        </div>

                        <div class="row g-4 mb-5">
                            <div class="col-6">
                                <label class="form-label text-white-50">Validade</label>
                                <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="MM/AA" required>
                            </div>
                            <div class="col-6">
                                <label class="form-label text-white-50">CVV</label>
                                <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="123" required>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-success btn-lg fw-bold rounded-pill shadow-lg py-3">
                                <i class="fas fa-check-circle me-2"></i>Confirmar Pagamento
                            </button>
                            <a asp-action="Step3" class="btn btn-outline-light rounded-pill py-2">
                                <i class="fas fa-arrow-left me-2"></i>Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
