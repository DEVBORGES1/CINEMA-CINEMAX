@model Cinema.Models.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Compra de Ingressos - Passo 1";
}

<div class="container py-5">
    <!-- Progress Bar -->
    <div class="position-relative mb-5">
        <div class="progress" style="height: 4px;">
            <div class="progress-bar bg-warning" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="position-absolute top-0 start-0 translate-middle btn btn-sm btn-warning rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">1</div>
        <div class="position-absolute top-0 start-25 translate-middle btn btn-sm btn-secondary rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">2</div>
        <div class="position-absolute top-0 start-50 translate-middle btn btn-sm btn-secondary rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">3</div>
        <div class="position-absolute top-0 start-75 translate-middle btn btn-sm btn-secondary rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">4</div>
        <div class="position-absolute top-0 start-100 translate-middle btn btn-sm btn-secondary rounded-circle shadow fw-bold" style="width: 30px; height: 30px;">5</div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-dark text-white border-secondary shadow-lg">
                <div class="card-header border-secondary bg-black bg-opacity-50 p-4">
                    <h2 class="h4 mb-0 fw-bold text-uppercase border-start border-4 border-warning ps-3">
                        <i class="fas fa-ticket-alt me-2 text-white-50"></i>Selecione os Ingressos
                    </h2>
                </div>
                
                <div class="card-body p-5">
                    <!-- Movie Info Summary -->
                    @if(Model.Session != null) {
                        <div class="d-flex align-items-center mb-5 pb-4 border-bottom border-secondary">
                            @if (!string.IsNullOrEmpty(Model.Session.Movie?.ImageURL)) {
                                <img src="@Model.Session.Movie.ImageURL" alt="Poster" class="rounded shadow me-4" style="width: 80px; height: 120px; object-fit: cover;">
                            }
                            <div>
                                <h3 class="h5 fw-bold text-warning mb-1">@Model.Session.Movie?.Title</h3>
                                <p class="mb-1 text-white-50">
                                    <i class="fas fa-calendar-alt me-2"></i>@Model.Session.StartTime.ToString("dd/MM/yyyy") 
                                    <span class="mx-2">|</span> 
                                    <i class="fas fa-clock me-2"></i>@Model.Session.StartTime.ToString("HH:mm")
                                </p>
                                <p class="mb-0 text-white-50"><i class="fas fa-door-open me-2"></i>Sala @Model.Session.Room?.RoomNumber</p>
                            </div>
                        </div>
                    }

                    <form asp-action="Step1" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <!-- Ticket Types -->
                        <div class="mb-4">
                            <label class="form-label text-uppercase fw-bold text-white-50 fs-7 ls-1">Tipos de Ingresso</label>
                            
                            <!-- Inteira -->
                            <div class="d-flex justify-content-between align-items-center bg-black bg-opacity-25 p-3 rounded border border-secondary mb-3">
                                <div>
                                    <h5 class="mb-0 fw-bold">Inteira</h5>
                                    <small class="text-secondary">Entrada padrão</small>
                                </div>
                                <div class="d-flex align-items-center gap-3">
                                    <span class="text-warning fw-bold fs-5">R$ @Model.Session?.Price.ToString("N2")</span>
                                    <input type="number" name="qtyNormal" value="@Model.QtyNormal" min="0" max="10" class="form-control form-control-sm bg-dark text-white border-secondary text-center" style="width: 70px;">
                                </div>
                            </div>

                            <!-- Meia -->
                            <div class="d-flex justify-content-between align-items-center bg-black bg-opacity-25 p-3 rounded border border-secondary">
                                <div>
                                    <h5 class="mb-0 fw-bold">Meia-Entrada</h5>
                                    <small class="text-secondary">Estudantes, Idosos, PNE</small>
                                </div>
                                <div class="d-flex align-items-center gap-3">
                                    <span class="text-warning fw-bold fs-5">R$ @((Model.Session?.Price * 0.5m)?.ToString("N2"))</span>
                                    <input type="number" name="qtyStudent" value="@Model.QtyStudent" min="0" max="10" class="form-control form-control-sm bg-dark text-white border-secondary text-center" style="width: 70px;">
                                </div>
                            </div>
                        </div>

                        <!-- Cupom (Placeholder) -->
                        <div class="mb-5">
                            <label class="form-label text-uppercase fw-bold text-white-50 fs-7 ls-1">Cupom de Desconto</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-tag"></i></span>
                                <input type="text" class="form-control bg-dark text-white border-secondary" placeholder="Código do cupom (Opcional)">
                                <button class="btn btn-outline-light" type="button">Aplicar</button>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning btn-lg fw-bold rounded-pill shadow-lg">
                                Escolher Assentos <i class="fas fa-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom input number styles could go here */
</style>
