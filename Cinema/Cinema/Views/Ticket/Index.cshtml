@model IEnumerable<Cinema.Models.Session>

@{
    ViewData["Title"] = "Ingressos Disponíveis";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <i class="fas fa-ticket-alt text-warning me-3"></i>Sessões Disponíveis
        </h1>
        <p class="lead text-muted">Escolha sua sessão e garanta seu lugar!</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var session in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card bg-dark text-white border-0 shadow-lg h-100 session-card">
                        <!-- Header com info do Filme -->
                        <div class="card-header bg-transparent border-0 pt-4 px-4">
                            <h5 class="card-title fw-bold text-white mb-1">
                                <i class="fas fa-film text-warning me-2"></i>@session.Movie?.Title
                            </h5>
                            <span class="badge bg-secondary">@session.Movie?.AgeRating?.Rating</span>
                            <span class="badge bg-dark border border-secondary text-light ms-1">@session.Movie?.DurationInMinutes min</span>
                        </div>

                        <div class="card-body px-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="text-center p-2 rounded bg-secondary bg-opacity-10">
                                    <h3 class="mb-0 fw-bold text-warning">@session.StartTime.ToString("HH:mm")</h3>
                                    <small class="text-muted text-uppercase">Horário</small>
                                </div>
                                <div class="text-end">
                                    <h6 class="mb-1 text-white">@session.StartTime.ToString("dd/MM - dddd")</h6>
                                    <span class="text-muted small"><i class="fas fa-door-open me-1"></i>Sala @session.Room?.RoomNumber</span>
                                </div>
                            </div>
                            
                            <hr class="border-secondary opacity-25" />
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fs-4 fw-bold text-success">R$ @session.Price.ToString("F2")</span>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-0 pb-4 px-4">
                            <a asp-action="Buy" asp-route-sessionId="@session.ID" class="btn btn-warning w-100 fw-bold py-2">
                                <i class="fas fa-shopping-cart me-2"></i>Comprar Ingresso
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 opacity-50">
            <i class="fas fa-video-slash fa-4x mb-3"></i>
            <h3>Nenhuma sessão disponível no momento.</h3>
            <p>Volte em breve para conferir a programação!</p>
        </div>
    }
</div>

<style>
    .session-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .session-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(255, 193, 7, 0.15) !important;
    }
</style>
