@model Cinema.Models.ViewModels.SeatSelectionViewModel
@using Cinema.Models.Enums

@{
    ViewData["Title"] = "Seleção de Assentos";
    var rows = Model.Session?.Room?.Rows ?? 10;
    var cols = Model.Session?.Room?.Columns ?? 10;
    var occupied = Model.OccupiedSeats;
}

<style>
    .screen {
        background-color: #333;
        height: 50px;
        width: 80%;
        margin: 0 auto 30px;
        transform: perspective(300px) rotateX(-5deg);
        box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        color: white;
        text-align: center;
        line-height: 50px;
        font-weight: bold;
    }
    
    .seat-grid {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
    }

    .seat-row {
        display: flex;
        gap: 10px;
    }

    .seat {
        width: 35px;
        height: 35px;
        border-radius: 8px 8px 4px 4px;
        background-color: #444444; /* Disponível */
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 0.8rem;
        transition: all 0.2s;
    }

    .seat:hover:not(.occupied):not(.selected) {
        background-color: #6c757d;
        transform: scale(1.1);
    }

    .seat.selected {
        background-color: #28a745; /* Selecionado */
        box-shadow: 0 0 10px #28a745;
    }

    .seat.occupied {
        background-color: #dc3545; /* Ocupado */
        cursor: not-allowed;
        opacity: 0.6;
    }

    .legend {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }
    .legend-item span {
        display: inline-block;
        width: 20px;
        height: 20px;
        margin-right: 5px;
        border-radius: 4px;
    }
</style>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2 class="text-center mb-4">Selecione seu Lugar</h2>
            
            <div class="screen">TELA</div>

            <div class="seat-grid">
                @for (int r = 0; r < rows; r++)
                {
                    char rowChar = (char)('A' + r);
                    <div class="seat-row">
                        <span class="me-2 mt-1 fw-bold text-muted">@rowChar</span>
                        @for (int c = 1; c <= cols; c++)
                        {
                            string seatId = $"{rowChar}-{c}";
                            bool isOccupied = occupied.Contains(seatId);
                            string cssClass = isOccupied ? "occupied" : "available";
                            
                            <div class="seat @cssClass" 
                                 data-row="@rowChar" 
                                 data-num="@c"
                                 title="Fileira @rowChar, Assento @c">
                                 @c
                            </div>
                        }
                    </div>
                }
            </div>

            <div class="legend mb-5">
                <div class="legend-item"><span style="background-color: #444;"></span>Disponível</div>
                <div class="legend-item"><span style="background-color: #28a745;"></span>Selecionado</div>
                <div class="legend-item"><span style="background-color: #dc3545;"></span>Ocupado</div>
            </div>

        </div>

        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Resumo da Compra</h4>
                </div>
                <div class="card-body">
                    <h5>@Model.Session?.Movie?.Title</h5>
                    <p class="text-muted"><i class="fas fa-clock me-1"></i> @Model.Session?.StartTime.ToString("g")</p>
                    <p class="text-muted"><i class="fas fa-video me-1"></i> Sala @Model.Session?.Room?.RoomNumber</p>
                    <hr />

                    <form asp-action="Buy" method="post" id="buyForm">
                        <input type="hidden" asp-for="SessionId" />
                        <input type="hidden" asp-for="SelectedSeatRow" id="inputRow" />
                        <input type="hidden" asp-for="SelectedSeatNumber" id="inputNum" />

                        <div class="mb-3 text-center">
                            <h3><span class="badge bg-dark" id="seatDisplay">--</span></h3>
                            <small class="text-muted">Assento Selecionado</small>
                        </div>

                         @if (User.IsInRole("Admin") || User.IsInRole("Seller"))
                        {
                            <div class="form-group mb-3">
                                <label class="control-label fw-bold">Cliente (Venda Assistida)</label>
                                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.Clients">
                                    <option value="">-- Selecione ou Venda Avulsa --</option>
                                </select>
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg" id="btnBuy" disabled>
                                Confirmar Compra
                            </button>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger mt-2"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.seat.available').click(function() {
                // Deseleciona anteriores
                $('.seat.selected').removeClass('selected');
                
                // Seleciona atual
                $(this).addClass('selected');
                
                // Atualiza inputs
                var row = $(this).data('row');
                var num = $(this).data('num');
                
                $('#inputRow').val(row);
                $('#inputNum').val(num);
                
                $('#seatDisplay').text(row + num); // ex: A1
                $('#btnBuy').prop('disabled', false);
            });
        });
    </script>
}
