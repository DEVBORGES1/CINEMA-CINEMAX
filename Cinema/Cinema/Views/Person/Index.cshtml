@using System.Linq
@model IEnumerable<Cinema.Models.Person>

@{
    ViewData["Title"] = "Gestão de Pessoas";
}

<div class="container py-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-4 fw-bold">
                <i class="fas fa-users text-primary me-3"></i>Pessoas
            </h1>
            <p class="text-muted lead">Gerencie clientes, funcionários e elenco.</p>
        </div>
        <a asp-action="Create" class="btn btn-warning btn-lg shadow-sm">
            <i class="fas fa-plus me-2"></i>Novo Cadastro
        </a>
    </div>

    <!-- Search & Filter -->
    <div class="card bg-dark border-0 shadow-lg mb-5">
        <div class="card-body p-4">
            <form asp-action="Search" method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-secondary border-0 text-white">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="query" class="form-control bg-secondary border-0 text-white placeholder-light" 
                               placeholder="Buscar por nome, email ou CPF..." 
                               value="@ViewBag.SearchQuery" />
                    </div>
                </div>
                <div class="col-md-2 d-grid">
                    <button class="btn btn-primary btn-lg" type="submit">Filtrar</button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.SearchQuery != null)
    {
        <div class="mb-4">
            <a asp-action="Index" class="text-decoration-none text-muted">
                <i class="fas fa-times-circle me-1"></i>Limpar filtro: <strong>"@ViewBag.SearchQuery"</strong>
            </a>
        </div>
    }

    <!-- Content -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive rounded shadow-lg">
            <table class="table table-dark table-hover mb-0 align-middle">
                <thead class="bg-secondary text-uppercase text-secondary small">
                    <tr>
                        <th class="py-3 ps-4">Nome</th>
                        <th class="py-3">Função</th>
                        <th class="py-3">Contato / Info</th>
                        <th class="py-3 text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center fw-bold" style="width: 45px; height: 45px; font-size: 1.2rem;">
                                        @person.FirstName?.FirstOrDefault()@person.LastName?.FirstOrDefault()
                                    </div>
                                    <div>
                                        <h6 class="mb-0 fw-bold">@person.FirstName @person.LastName</h6>
                                        <small class="text-muted">ID: @person.ID</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (person.Roles != null)
                                {
                                    @foreach(var role in person.Roles)
                                    {
                                        <span class="badge bg-secondary me-1">@role.Name</span>
                                    }
                                }
                                @if(person.Role == Cinema.Models.Enums.UserRole.Admin)
                                {
                                    <span class="badge bg-danger">ADMIN</span>
                                }
                                else if(person.Role == Cinema.Models.Enums.UserRole.Seller)
                                {
                                    <span class="badge bg-info text-dark">Vendedor</span>
                                }
                            </td>
                            <td>
                                @if (person.IsClient == true)
                                {
                                    <div class="small text-white-50">
                                        <div class="mb-1"><i class="fas fa-envelope me-2 w-20"></i> @(person.Email ?? "-")</div>
                                        <div><i class="fas fa-id-card me-2 w-20"></i> @(person.CPF ?? "-")</div>
                                    </div>
                                }
                                else
                                {
                                     <span class="text-muted small">N/A</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Update" asp-route-id="@person.ID" class="btn btn-sm btn-outline-light me-2" title="Editar">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@person.ID" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Excluir" onclick="return confirm('Tem certeza que deseja excluir esta pessoa?');">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5 opacity-50">
            <i class="fas fa-user-slash fa-4x mb-3"></i>
            <h3>Nenhum registro encontrado.</h3>
        </div>
    }
</div>

<style>
    .placeholder-light::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }
    .w-20 { width: 20px; text-align: center; }
</style>
